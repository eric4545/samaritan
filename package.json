{
  "name": "samaritan",
  "version": "1.0.0",
  "main": "dist/cli/index.js",
  "bin": {
    "samaritan": "dist/cli/index.js"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "test": "tsx --test tests/**/*.test.ts",
    "test:snapshots": "tsx --test tests/manuals/*.test.ts",
    "test:snapshots:update": "tsx --test --test-update-snapshots tests/manuals/*.test.ts",
    "build": "tsc && cp -r src/schemas dist/",
    "start": "tsx src/cli/index.ts",
    "prepublishOnly": "npm run build",
    "lint": "npx @biomejs/biome check .",
    "lint:fix": "npx @biomejs/biome check --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eric4545/samaritan.git"
  },
  "keywords": [
    "operations",
    "sre",
    "automation",
    "yaml",
    "cli",
    "ops-as-code"
  ],
  "author": "SAMARITAN Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eric4545/samaritan/issues"
  },
  "homepage": "https://github.com/eric4545/samaritan#readme",
  "description": "SAMARITAN - Operations as Code CLI for SRE teams. Define operations once, execute anywhere with complete audit trails.",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@atlaskit/adf-utils": "^19.24.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "commander": "^14.0.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^24.3.1",
    "tsx": "^4.20.5"
  }
}
