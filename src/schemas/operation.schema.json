{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://samaritan.dev/schemas/operation.json",
  "title": "SAMARITAN Operation",
  "description": "Schema for SAMARITAN operation definitions",
  "type": "object",
  "required": ["name", "version", "steps"],
  "additionalProperties": true,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Operation name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "description": "Operation description"
    },
    "author": {
      "type": "string",
      "description": "Operation author"
    },
    "category": {
      "type": "string",
      "description": "Operation category"
    },
    "overview": {
      "type": "object",
      "description": "Flexible overview/metadata section with custom fields (e.g., Release Date, Release Notes, etc.)"
    },
    "imports": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Import paths for reusable step libraries"
    },
    "needs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Required operation dependencies"
    },
    "uses": {
      "type": "string",
      "description": "Marketplace operation reference"
    },
    "with": {
      "type": "object",
      "description": "Parameters for marketplace operation"
    },
    "environments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "from": {
            "type": "string",
            "description": "Inherit environment definition from manifest"
          },
          "description": {
            "type": "string"
          },
          "variables": {
            "type": "object"
          },
          "targets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "approval_required": {
            "type": "boolean"
          },
          "validation_required": {
            "type": "boolean"
          },
          "restrictions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "variables": {
      "type": "object",
      "description": "Environment-specific variables"
    },
    "common_variables": {
      "type": "object",
      "description": "Common variables shared across all environments (can be overridden by environment-specific variables)"
    },
    "env_file": {
      "type": "string",
      "description": "Path to .env file for loading variables (lowest priority in variable lookup)"
    },
    "preflight": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["command", "manual"]
          },
          "command": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "timeout": {
            "type": "number",
            "minimum": 0
          },
          "condition": {
            "type": "string"
          },
          "evidence": {
            "type": "object",
            "properties": {
              "required": {
                "type": "boolean"
              },
              "types": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "screenshot",
                    "log",
                    "command_output",
                    "file",
                    "photo",
                    "video"
                  ]
                }
              },
              "results": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["type"],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "screenshot",
                        "log",
                        "command_output",
                        "file",
                        "photo",
                        "video"
                      ]
                    },
                    "file": {
                      "type": "string",
                      "description": "File path reference (relative to operation file)"
                    },
                    "content": {
                      "type": "string",
                      "description": "Inline content (for text-based evidence)"
                    },
                    "description": {
                      "type": "string",
                      "description": "Optional description or context"
                    }
                  },
                  "oneOf": [
                    { "required": ["file"] },
                    { "required": ["content"] }
                  ]
                }
              }
            }
          },
          "evidence_required": {
            "type": "boolean",
            "description": "DEPRECATED: Use evidence.required instead"
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["use"],
            "properties": {
              "use": {
                "type": "string",
                "minLength": 1,
                "description": "Reference to imported step"
              },
              "timeout": {
                "type": "number",
                "minimum": 0
              },
              "phase": {
                "type": "string",
                "enum": ["preflight", "flight", "postflight"],
                "description": "Execution phase of the step"
              },
              "env": {
                "type": "object"
              },
              "with": {
                "type": "object"
              },
              "variables": {
                "type": "object",
                "description": "Step-scoped variables that override environment and common variables"
              },
              "evidence": {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  },
                  "types": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "screenshot",
                        "log",
                        "command_output",
                        "file",
                        "photo",
                        "video"
                      ]
                    }
                  },
                  "results": {
                    "type": "object",
                    "description": "Environment-keyed evidence results (e.g., { staging: [...], production: [...] })",
                    "additionalProperties": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["type"],
                        "properties": {
                          "type": {
                            "type": "string",
                            "enum": [
                              "screenshot",
                              "log",
                              "command_output",
                              "file",
                              "photo",
                              "video"
                            ]
                          },
                          "file": {
                            "type": "string",
                            "description": "File path reference (relative to operation file)"
                          },
                          "content": {
                            "type": "string",
                            "description": "Inline content (for text-based evidence)"
                          },
                          "description": {
                            "type": "string",
                            "description": "Optional description or context"
                          }
                        },
                        "oneOf": [
                          { "required": ["file"] },
                          { "required": ["content"] }
                        ]
                      }
                    }
                  }
                }
              },
              "evidence_required": {
                "type": "boolean",
                "description": "DEPRECATED: Use evidence.required instead"
              },
              "continue_on_error": {
                "type": "boolean"
              }
            }
          },
          {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "type": {
                "type": "string",
                "enum": ["automatic", "manual", "approval", "conditional"]
              },
              "phase": {
                "type": "string",
                "enum": ["preflight", "flight", "postflight"],
                "description": "Execution phase of the step"
              },
              "description": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "instruction": {
                "type": "string"
              },
              "if": {
                "type": "string",
                "description": "Condition for conditional steps"
              },
              "timeout": {
                "type": "number",
                "minimum": 0
              },
              "estimated_duration": {
                "type": "number",
                "minimum": 0
              },
              "env": {
                "type": "object"
              },
              "with": {
                "type": "object"
              },
              "variables": {
                "type": "object",
                "description": "Step-scoped variables that override environment and common variables"
              },
              "evidence": {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  },
                  "types": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "screenshot",
                        "log",
                        "command_output",
                        "file",
                        "photo",
                        "video"
                      ]
                    }
                  },
                  "results": {
                    "type": "object",
                    "description": "Environment-keyed evidence results (e.g., { staging: [...], production: [...] })",
                    "additionalProperties": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["type"],
                        "properties": {
                          "type": {
                            "type": "string",
                            "enum": [
                              "screenshot",
                              "log",
                              "command_output",
                              "file",
                              "photo",
                              "video"
                            ]
                          },
                          "file": {
                            "type": "string",
                            "description": "File path reference (relative to operation file)"
                          },
                          "content": {
                            "type": "string",
                            "description": "Inline content (for text-based evidence)"
                          },
                          "description": {
                            "type": "string",
                            "description": "Optional description or context"
                          }
                        },
                        "oneOf": [
                          { "required": ["file"] },
                          { "required": ["content"] }
                        ]
                      }
                    }
                  }
                }
              },
              "evidence_required": {
                "type": "boolean",
                "description": "DEPRECATED: Use evidence.required instead"
              },
              "evidence_types": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "screenshot",
                    "log",
                    "command_output",
                    "file",
                    "photo",
                    "video"
                  ]
                },
                "description": "DEPRECATED: Use evidence.types instead"
              },
              "continue_on_error": {
                "type": "boolean"
              },
              "needs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "sub_steps": {
                "type": "array",
                "items": {
                  "$ref": "#/properties/steps/items/oneOf/1"
                }
              },
              "manual_override": {
                "type": "boolean"
              },
              "manual_instructions": {
                "type": "string"
              },
              "ticket": {
                "oneOf": [
                  {
                    "type": "string",
                    "description": "Single ticket reference (e.g., JIRA-123)"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Multiple ticket references"
                  }
                ],
                "description": "Bug/issue ticket references"
              },
              "foreach": {
                "oneOf": [
                  {
                    "type": "object",
                    "required": ["var", "values"],
                    "properties": {
                      "var": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Variable name to use in iteration"
                      },
                      "values": {
                        "type": "array",
                        "minItems": 1,
                        "description": "Array of values to iterate over"
                      }
                    },
                    "additionalProperties": false,
                    "description": "Single variable foreach loop"
                  },
                  {
                    "type": "object",
                    "required": ["matrix"],
                    "properties": {
                      "matrix": {
                        "type": "object",
                        "minProperties": 1,
                        "additionalProperties": {
                          "type": "array",
                          "minItems": 1
                        },
                        "description": "Matrix of variables for cartesian product expansion"
                      },
                      "include": {
                        "type": "array",
                        "items": {
                          "type": "object"
                        },
                        "description": "Additional specific variable combinations to include"
                      },
                      "exclude": {
                        "type": "array",
                        "items": {
                          "type": "object"
                        },
                        "description": "Specific variable combinations to exclude"
                      }
                    },
                    "additionalProperties": false,
                    "description": "Matrix expansion with multiple variables (cartesian product)"
                  }
                ],
                "description": "Loop/matrix support for repeatable steps"
              },
              "section_heading": {
                "type": "boolean",
                "description": "If true, render as a new markdown heading instead of table row"
              },
              "pic": {
                "type": "string",
                "description": "Person In Charge for this step"
              },
              "reviewer": {
                "type": "string",
                "description": "Reviewer/buddy who monitors and verifies the PIC's work"
              },
              "timeline": {
                "oneOf": [
                  {
                    "type": "string",
                    "description": "Legacy format: raw Mermaid timeline syntax (e.g., '2024-01-15 09:00, 30m')"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "start": {
                        "type": "string",
                        "description": "Absolute start time (e.g., '2024-01-15 09:00')"
                      },
                      "duration": {
                        "type": "string",
                        "description": "Duration (e.g., '30m', '2h', '1d')"
                      },
                      "after": {
                        "type": "string",
                        "description": "Dependency on another step name"
                      },
                      "status": {
                        "type": "string",
                        "enum": ["active", "done", "crit"],
                        "description": "Mermaid status"
                      }
                    },
                    "additionalProperties": false,
                    "description": "Structured timeline configuration (auto-converts to Mermaid syntax)"
                  }
                ],
                "description": "Expected date/time or duration for this step (string or structured format)"
              },
              "options": {
                "type": "object",
                "properties": {
                  "substitute_vars": {
                    "type": "boolean",
                    "default": true,
                    "description": "Substitute ${VAR} in instruction and command (default: true)"
                  },
                  "show_command_separately": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show command in separate section from instruction (default: false)"
                  }
                },
                "additionalProperties": false,
                "description": "Step-level rendering and substitution options"
              },
              "rollback": {
                "type": "object",
                "properties": {
                  "command": {
                    "type": "string"
                  },
                  "instruction": {
                    "type": "string"
                  },
                  "timeout": {
                    "type": "number",
                    "minimum": 0
                  },
                  "options": {
                    "type": "object",
                    "properties": {
                      "substitute_vars": {
                        "type": "boolean",
                        "default": true,
                        "description": "Substitute ${VAR} in instruction and command (default: true)"
                      },
                      "show_command_separately": {
                        "type": "boolean",
                        "default": false,
                        "description": "Show command in separate section from instruction (default: false)"
                      }
                    },
                    "additionalProperties": false
                  }
                }
              },
              "retry": {
                "type": "object",
                "properties": {
                  "attempts": {
                    "type": "number",
                    "minimum": 1
                  },
                  "delay": {
                    "type": "number",
                    "minimum": 0
                  },
                  "backoff": {
                    "type": "string",
                    "enum": ["linear", "exponential"]
                  }
                }
              },
              "approval": {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  },
                  "approvers": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "timeout": {
                    "type": "string"
                  }
                }
              }
            }
          }
        ]
      }
    },
    "rollback": {
      "type": "object",
      "properties": {
        "automatic": {
          "type": "boolean"
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "command": {
                "type": "string"
              },
              "instruction": {
                "type": "string"
              },
              "timeout": {
                "type": "number",
                "minimum": 0
              },
              "options": {
                "type": "object",
                "properties": {
                  "substitute_vars": {
                    "type": "boolean",
                    "default": true,
                    "description": "Substitute ${VAR} in instruction and command (default: true)"
                  },
                  "show_command_separately": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show command in separate section from instruction (default: false)"
                  }
                },
                "additionalProperties": false
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "source": {
          "type": "string"
        },
        "git_hash": {
          "type": "string"
        }
      }
    }
  }
}
