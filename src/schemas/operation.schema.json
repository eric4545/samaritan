{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://samaritan.dev/schemas/operation.json",
  "title": "SAMARITAN Operation",
  "description": "Schema for SAMARITAN operation definitions",
  "type": "object",
  "required": ["name", "version", "steps"],
  "additionalProperties": true,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Operation name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "description": "Operation description"
    },
    "author": {
      "type": "string",
      "description": "Operation author"
    },
    "category": {
      "type": "string",
      "description": "Operation category"
    },
    "imports": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Import paths for reusable step libraries"
    },
    "needs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Required operation dependencies"
    },
    "uses": {
      "type": "string",
      "description": "Marketplace operation reference"
    },
    "with": {
      "type": "object",
      "description": "Parameters for marketplace operation"
    },
    "environments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "from": {
            "type": "string",
            "description": "Inherit environment definition from manifest"
          },
          "description": {
            "type": "string"
          },
          "variables": {
            "type": "object"
          },
          "targets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "approval_required": {
            "type": "boolean"
          },
          "validation_required": {
            "type": "boolean"
          },
          "restrictions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "variables": {
      "type": "object",
      "description": "Environment-specific variables"
    },
    "common_variables": {
      "type": "object",
      "description": "Common variables shared across all environments (can be overridden by environment-specific variables)"
    },
    "env_file": {
      "type": "string",
      "description": "Path to .env file for loading variables (lowest priority in variable lookup)"
    },
    "preflight": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["command", "manual"]
          },
          "command": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "timeout": {
            "type": "number",
            "minimum": 0
          },
          "condition": {
            "type": "string"
          },
          "evidence": {
            "type": "object",
            "properties": {
              "required": {
                "type": "boolean"
              },
              "types": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["screenshot", "log", "command_output", "file", "photo", "video"]
                }
              }
            }
          },
          "evidence_required": {
            "type": "boolean",
            "description": "DEPRECATED: Use evidence.required instead"
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["use"],
            "properties": {
              "use": {
                "type": "string",
                "minLength": 1,
                "description": "Reference to imported step"
              },
              "timeout": {
                "type": "number",
                "minimum": 0
              },
              "phase": {
                "type": "string",
                "enum": ["preflight", "flight", "postflight"],
                "description": "Execution phase of the step"
              },
              "env": {
                "type": "object"
              },
              "with": {
                "type": "object"
              },
              "variables": {
                "type": "object",
                "description": "Step-scoped variables that override environment and common variables"
              },
              "evidence": {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  },
                  "types": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": ["screenshot", "log", "command_output", "file", "photo", "video"]
                    }
                  }
                }
              },
              "evidence_required": {
                "type": "boolean",
                "description": "DEPRECATED: Use evidence.required instead"
              },
              "continue_on_error": {
                "type": "boolean"
              }
            }
          },
          {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "type": {
                "type": "string",
                "enum": ["automatic", "manual", "approval", "conditional"]
              },
              "phase": {
                "type": "string",
                "enum": ["preflight", "flight", "postflight"],
                "description": "Execution phase of the step"
              },
              "description": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "instruction": {
                "type": "string"
              },
              "if": {
                "type": "string",
                "description": "Condition for conditional steps"
              },
              "timeout": {
                "type": "number",
                "minimum": 0
              },
              "estimated_duration": {
                "type": "number",
                "minimum": 0
              },
              "env": {
                "type": "object"
              },
              "with": {
                "type": "object"
              },
              "variables": {
                "type": "object",
                "description": "Step-scoped variables that override environment and common variables"
              },
              "evidence": {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  },
                  "types": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": ["screenshot", "log", "command_output", "file", "photo", "video"]
                    }
                  }
                }
              },
              "evidence_required": {
                "type": "boolean",
                "description": "DEPRECATED: Use evidence.required instead"
              },
              "evidence_types": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["screenshot", "log", "command_output", "file", "photo", "video"]
                },
                "description": "DEPRECATED: Use evidence.types instead"
              },
              "continue_on_error": {
                "type": "boolean"
              },
              "needs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "sub_steps": {
                "type": "array",
                "items": {
                  "$ref": "#/properties/steps/items/oneOf/1"
                }
              },
              "manual_override": {
                "type": "boolean"
              },
              "manual_instructions": {
                "type": "string"
              },
              "ticket": {
                "oneOf": [
                  {
                    "type": "string",
                    "description": "Single ticket reference (e.g., JIRA-123)"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Multiple ticket references"
                  }
                ],
                "description": "Bug/issue ticket references"
              },
              "foreach": {
                "type": "object",
                "required": ["var", "values"],
                "properties": {
                  "var": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Variable name to use in iteration"
                  },
                  "values": {
                    "type": "array",
                    "minItems": 1,
                    "description": "Array of values to iterate over"
                  }
                },
                "description": "Loop/matrix support for repeatable steps"
              },
              "rollback": {
                "type": "object",
                "properties": {
                  "command": {
                    "type": "string"
                  },
                  "instruction": {
                    "type": "string"
                  },
                  "timeout": {
                    "type": "number",
                    "minimum": 0
                  }
                }
              },
              "retry": {
                "type": "object",
                "properties": {
                  "attempts": {
                    "type": "number",
                    "minimum": 1
                  },
                  "delay": {
                    "type": "number",
                    "minimum": 0
                  },
                  "backoff": {
                    "type": "string",
                    "enum": ["linear", "exponential"]
                  }
                }
              },
              "approval": {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  },
                  "approvers": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "timeout": {
                    "type": "string"
                  }
                }
              }
            }
          }
        ]
      }
    },
    "rollback": {
      "type": "object",
      "properties": {
        "automatic": {
          "type": "boolean"
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "command": {
                "type": "string"
              },
              "instruction": {
                "type": "string"
              },
              "timeout": {
                "type": "number",
                "minimum": 0
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "source": {
          "type": "string"
        },
        "git_hash": {
          "type": "string"
        }
      }
    }
  }
}